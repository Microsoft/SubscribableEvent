{
    "compilerOptions": {
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noResolve": false,
        "module": "es2015",
        "target": "es2015",
        "outDir": "dist-es2015",
        "strict": true
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "node_modules",
        "dist-*"
    ]
}
