{
    "compilerOptions": {
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "declaration": true,
        "noResolve": false,
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist/"
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "dist",
        "node_modules"
    ]
}